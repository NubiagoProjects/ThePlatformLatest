{
  "name": "nubiago-backend",
  "version": "1.0.0",
  "description": "Backend API for Nubiago marketplace with Yellow Card integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "setup:users": "ts-node scripts/setup-users.ts",
    "setup:supabase": "ts-node scripts/setup-supabase.ts",
    "setup:db": "prisma db push && npm run setup:users",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "@supabase/supabase-js": "^2.38.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "axios": "^1.6.0",
    "request-ip": "^3.3.0",
    "@prisma/client": "^5.7.0",
    "prisma": "^5.7.0",
    "dotenv": "^16.3.1",
    "morgan": "^1.10.0",
    "cookie-parser": "^1.4.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/cookie-parser": "^1.4.6",
    "typescript": "^5.3.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "keywords": [
    "marketplace",
    "api",
    "mobile-money",
    "yellow-card",
    "supabase",
    "typescript"
  ],
  "author": "Nubiago Team",
  "license": "MIT"
}
